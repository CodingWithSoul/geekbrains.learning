package ru.geekbrains.lesson1;

public class Lesson1 {

    public static void main(String[] args) {
//	        Задание 2.
        byte byteVar = 127;
	    short shortVar = -32768;
	    int integerVar = 2147483647;
	    long longVar = -9223372036854775808L;
	    float floatVar = 3.14F;
	    double doubleVar = 2.718;
	    char charVar = 'c';
	    boolean booleanVar = true;
	    String stringVar = "String";

//	        Задание 3.
        int a = 5;
        int b = 7;
        int c = -8;
        int d = 2;
        int e = doCalculate (a, b, c, d);

//          Задание 4.
        int firstArg = 15;
        int secondArg = 20;
        boolean resultCompare = doCompare(firstArg, secondArg);

//          Задание 5.
        int integerNumber = 7;
        prntPositiveOrNegative(integerNumber);

//        Задание 6.
        boolean compareVar = doPositiveOrNegative(integerNumber);

//        Задание 7.
        String name = "Владимир";
        prntMsg(name);

//        Задание 8.
        int year = 2020;
        leapOrNot(year);
    }

//    Метод к заданию 3.
    public static int doCalculate(int a, int b, int c, int d) {
        int tmpVar = a*(b+(c/d));
        return tmpVar;
    }

//    Метод к заданию 4
    public static boolean doCompare(int a, int b) {
        if (10 < (a+b) && (a+b) <= 20) {
            return true;
        } else return false;
    }

//    Метод к заданию 5.
    public static void prntPositiveOrNegative(int a) {
        if (a>= 0) System.out.println();
    }

//    Метод к заданию 6.
    public static boolean doPositiveOrNegative(int a) {
        if (a < 0) return true;
        else return false;
    }

//    Метод к заданию 7.
    public static void prntMsg(String s) {
        System.out.println("Привет, " + s);
    }

//    Метод к заданию 8.
    public static void leapOrNot(int a) {
        if ((a%4 == 0 && a%100 != 100) || a%400 == 0) System.out.println("Год " + a + " високосный.");
        else System.out.println("Год " + a + " не високосный");
    }
}